<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CRUDRealtimeClient"
        tools:targetApi="31">
        <activity
            android:name=".ScholarshipStudentModel"
            android:exported="false" />
        <activity
            android:name=".ScholarshipAdapater"
            android:exported="false" />
        <activity
            android:name=".ScholarshipStudentActivity"
            android:exported="false" />
        <activity
            android:name=".ScholarshipActivity"
            android:exported="false" /> <!-- Set LoginActivity as the launcher -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- SignupActivity (No launcher intent) -->
        <activity
            android:name=".SignupActivity"
            android:exported="true" /> <!-- MainActivity (No launcher intent) -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>